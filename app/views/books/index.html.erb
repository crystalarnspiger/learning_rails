<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Summary</th>
    <th>Link to Book</th>
    <th>Update Book</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.summary %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add Book', new_book_path %>
<%= link_to 'Home', controller: 'welcome' %>
